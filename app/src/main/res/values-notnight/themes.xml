<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:statusBarColor" tools:ignore="NewApi">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">?android:attr/colorBackground</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">?attr/colorControlHighlight</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Base.Theme.Meteocool" parent="Base.Theme">
        <item name="colorPrimary">@color/turquoise_cloud_0</item>
        <item name="colorSecondary">@color/white_0</item>
        <item name="colorPrimaryDark">@color/white_10</item>
        <item name="colorAccent">@color/turquoise_cloud_0</item>
        <!--colorBackground appears behind scrollable content and is used for the default window-->
        <!--background. colorSurface is mapped to the surface of components such as cards, sheets-->
        <!--and menus. colorError is used to indicate an error state for components such as-->
        <!--text fields.-->
        <item name="android:colorBackground">@color/white_10</item>
        <item name="colorSurface">@color/white_10</item>
        <item name="colorError">@color/red_600</item>

        <!--"On" colors define how text, icons and strokes are colored in relation to the surface-->
        <!--on which they appear.-->
        <item name="colorOnPrimary">@color/white_0</item>
        <item name="colorOnSecondary">@color/black_0</item>
        <item name="colorOnBackground">@color/black_0</item>
        <item name="colorOnSurface">@color/black_0</item>
        <item name="colorOnError">@color/white_0</item>
    </style>

    <style name="SplashTheme" parent="Base.Theme.Meteocool">
        <item name="colorPrimary">@color/white_10</item>
        <item name="android:windowBackground" >@drawable/launch_screen</item>
    </style>

    <style name="Toolbar" parent="Base.Theme.Meteocool">

    </style>

    <style name="AppbarLayout" parent="ThemeOverlay.AppCompat.ActionBar">

    </style>

    <style name="OnBoardingTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/turquoise_cloud_0</item>
        <item name="android:textColor">@color/white_0</item>
        <item name="colorAccent">@color/white_0</item>
        <item name="android:colorBackground">@color/turquoise_cloud_0</item>
    </style>

</resources>