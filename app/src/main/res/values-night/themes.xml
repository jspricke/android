<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Meteocool" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/cloudAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/cloudAccent</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="SplashTheme" parent="Theme.Meteocool">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:windowBackground" >@drawable/launch_screen</item>
    </style>

    <style name="OnBoardingTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/cloudAccent</item>
    </style>
</resources>